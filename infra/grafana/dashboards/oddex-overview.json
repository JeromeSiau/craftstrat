        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 14},
        "datasource": {"type": "prometheus", "uid": "prometheus"},
        "targets": [
          {
            "expr": "oddex_pnl_usdc",
            "refId": "A"
          }
        ],
        "fieldConfig": {
